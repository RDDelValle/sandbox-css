{
  "name": "sandbox-css",
  "version": "1.0.0",
  "description": "Sandbox css project for personal reference and education.",
  "license": "ISC",
  "type": "commonjs",
  "author": "Ramon Del Valle",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RDDelValle/sandbox-css.git"
  },
  "keywords": ["css", "sandbox"],
  "bugs": {
    "url": "https://github.com/RDDelValle/sandbox-css/issues"
  },
  "homepage": "https://github.com/RDDelValle/sandbox-css#readme",
  "scripts": {
    "clean": "rimraf dist docs",

    "serve": "npm-run-all clean build serve:server",
    "serve:server": "live-server docs",

    "dev": "npm-run-all clean build dev:watch",
    "dev:watch": "npm-run-all --parallel watch serve:server",
    "dev:server": "live-server docs",

    "build": "npm-run-all build:scss build:css build:pug build:assets",

    "watch": "npm-run-all --parallel watch:scss watch:css watch:pug",

    "build:css": "npm-run-all --parallel build:dist:css build:docs:css",
    "build:dist:css": "postcss dist/css/sandbox.raw.css -o dist/css/sandbox.css -m",
    "build:docs:css": "postcss dist/css/sandbox.raw.css -o docs/css/sandbox.css -m",

    "watch:css": "npm-run-all --parallel watch:dist:css watch:docs:css",
    "watch:dist:css": "postcss dist/css/sandbox.raw.css -o dist/css/sandbox.css --watch",
    "watch:docs:css": "postcss dist/css/sandbox.raw.css -o docs/css/sandbox.css --watch",

    "build:scss": "sass --source-map --style=expanded src/scss/main.scss dist/css/sandbox.raw.css",
    "watch:scss": "sass --source-map --style=expanded src/scss/main.scss dist/css/sandbox.raw.css --watch",

    "build:pug": "pug --pretty src/pug/*.pug -o docs",
    "watch:pug": "pug --pretty src/pug/*.pug -o docs --watch",

    "build:assets": "copyfiles -u -1 src/assets/**/* docs/"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "pug": "^3.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^6.1.2",
    "sass": "^1.97.3"
  }
}
